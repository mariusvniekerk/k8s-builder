apiVersion: batch/v1
kind: Job
metadata:
  name: conda-builder-{{ name }}
spec:
  # Clean up after 7 days
  ttlSecondsAfterFinished: {{ 60 * 60 * 24 * 7 }}
  template:
    spec:
      containers:
      - name: build-image
        image: {{ image }}
        tty: true
        command: [
          "bash", "/scripts/build_script.sh"]
        resources:
          requests:
            memory: "4G"
            cpu: "4000m"
          limits:
            memory: "7G"
            cpu: "8000m"
            {%- if "linux-anvil-cuda" in 'image' %}
            nvidia.com/gpu: 1
            {%- endif %}
        env:
          - name: FEEDSTOCK_ROOT
            value: /src
          - name: RECIPE_ROOT
            value: /src/recipe
          - name: CONFIG
            value: {{ config }}
          - name: HOST_USER_ID
            value: "1000"
          - name: UPLOAD_PACKAGES
            value: "False"
        volumeMounts:
          - name: build-script
            mountPath: /scripts
          - name: src-archive
            mountPath: /src_archive
          - name: workdir
            mountPath: /src
      restartPolicy: Never
      volumes:
        - name: build-script
          configMap:
            name: build-script-{{ name }}
            defaultMode: 0744
        - name: src-archive
          configMap:
            name: src-{{ name }}
        - name: workdir
          emptyDir: {}
      tolerations:
      {%- for toleration in tolerations %}
      - key: {{ toleration.key }}
        operator: "Exists"
        effect: "NoSchedule"
      {% endfor %}

  backoffLimit: 1
